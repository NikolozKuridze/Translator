{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Postgres": "Host=localhost;Port=5432;Database=TranslatorDb;Username=postgres;Password=postgres"
  },
  "RedisConfiguration": {
    "ConnectionString": "localhost:6379",
    "DefaultCacheExpirationMinutes": 60
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.PostgreSQL" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "PostgreSQL",
        "Args": {
          "connectionString": "Host=localhost;Database=logs_db;Username=logs_user;Password=logs_pass",
          "tableName": "logs",
          "needAutoCreateTable": true
        }
      }
    ]
  }
}
