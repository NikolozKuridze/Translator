{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "CORSPolicy": {
    "AllowedIps": [
      "127.0.0.1"
    ]
  },
  "ProductionUrl": {
    "Path": "https://translator.salesvault.dev"
  },
  "AdminAuthSettings": {
    "Password": "supergigasigma",
    "SessionName": "AdminSession",
    "SessionTimeoutInMinutes": 120
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Postgres": "Host=localhost;Port=5432;Database=TranslatorDb;Username=postgres;Password=postgres",
    "LogEntry": "Host=localhost;Port=5432;Database=logs_db;Username=logs_user;Password=logs_pass"
  },
  "RedisOptions": {
    "ConnectionString": "localhost:6379",
    "SessionTimeout": 1440,
    "Password": "",
    "DefaultCacheExpirationDays": 2
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.PostgreSQL"
    ],
    "MinimumLevel": "Warning",
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "PostgreSQL",
        "Args": {
          "connectionString": "Host=localhost;Port=5432;Database=logs_db;Username=logs_user;Password=logs_pass",
          "tableName": "logs",
          "needAutoCreateTable": true
        }
      }
    ]
  },
  "LanguageSeedingConfiguration": {
    "Path": "Database/Postgres/SeedData/languages.json"
  }
}
