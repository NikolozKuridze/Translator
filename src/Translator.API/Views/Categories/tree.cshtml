                    <div class="form-group">
                        <label for="editOrder" class="form-label">Order</label>
                        <input type="number"
                               class="form-control"
                               id="editOrder"
                               name="order"
                               onkeypress="return categoriesManager.allowOnlyNumbers(event)"
