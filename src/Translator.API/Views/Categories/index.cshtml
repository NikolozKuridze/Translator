                                        <button type="button"
                                                class="action-btn btn-delete"
                                                onclick="showDeleteConfirmation('@category.Id', '@Html.Raw(Html.Encode(category.Value))', this.closest('form'))"
                                                title="Delete @category.Value">
                                            <i class="fas fa-trash"></i>
                                        </button>
