@model Translator.API.Middlewares.ErrorViewModel

@{
    ViewData["Title"] = Model?.Title ?? "Ошибка";
}

<div class="error-container">
    <div class="error-layout">
        <div class="error-content">
            @Html.Raw($"<h1 class='error-title'>{ViewData["Title"]}</h1>")
            
            @Html.Raw($"<p class='error-message'>{(!string.IsNullOrWhiteSpace(Model?.Message) ? Model.Message : "It''s unhandled error")}</p>")

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="error-details">
                    @Html.Raw("<h5><i class='fas fa-list-ul'></i> Error details</h5>")
                    <ul class="error-list">
                        @foreach (var entry in ViewData.ModelState)
                        {
                            foreach (var error in entry.Value.Errors)
                            {
                                @Html.Raw($"<li>{error.ErrorMessage}</li>")
                            }
                        }
                    </ul>
                </div>
            }

            @if (!string.IsNullOrWhiteSpace(Model?.RequestId))
            {
                <div class="request-id">
                    @Html.Raw("<i class='fas fa-fingerprint'></i>")
                    @Html.Raw("<span>Request ID:</span>")
                    @Html.Raw($"<code>{Model.RequestId}</code>")
                </div>
            }

            <div class="error-actions">
                <button type="button" class="btn" onclick="history.back()">Back</button>
                <a href="/" class="btn">Home</a>
            </div>
        </div>
    </div>
</div>

<style>
    .error-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
        background: #f8fafc;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .error-layout {
        width: 100%;
        max-width: min(90vw, 800px);
        background: #ffffff;
        border-radius: 12px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        border: 1px solid #e2e8f0;
    }

    .error-content {
        padding: 32px;
    }

    .error-title {
        font-size: 1.75rem;
        font-weight: 600;
        color: #1f2937;
        margin-bottom: 12px;
        margin-top: 0;
    }

    .error-message {
        font-size: 1.1rem;
        color: #ef4444;
        margin-bottom: 20px;
        line-height: 1.5;
        font-weight: 500;
        padding: 12px 16px;
        background: #fef2f2;
        border: 1px solid #fecaca;
        border-radius: 6px;
        border-top-left-radius: 0;
        border-bottom-left-radius: 0;
        border-left: 4px solid #ef4444;
    }

    .error-details {
        background: #fef3c7;
        border: 1px solid #f59e0b;
        padding: 16px;
        border-radius: 8px;
        margin-bottom: 20px;
    }

    .error-details h5 {
        margin-bottom: 12px;
        font-weight: 600;
        color: #92400e;
        font-size: 1rem;
        display: flex;
        align-items: center;
        gap: 6px;
    }

    .error-list {
        margin: 0;
        padding-left: 16px;
        color: #92400e;
    }

    .error-list li {
        padding: 2px 0;
    }

    .request-id {
        background: transparent;
        padding: 8px 0;
        border-radius: 0;
        margin-bottom: 20px;
        font-size: 0.85rem;
        color: #9ca3af;
        display: flex;
        align-items: center;
        gap: 6px;
    }

    .request-id i {
        color: #d1d5db;
    }

    .request-id code {
        background: transparent;
        padding: 0;
        border-radius: 0;
        font-family: 'Consolas', 'Monaco', monospace;
        color: #9ca3af;
        margin-left: auto;
        font-size: 0.8rem;
    }

    .error-actions {
        margin-top: 24px;
    }

    .btn {
        display: inline-block;
        margin-right: 12px;
        padding: 10px 16px;
        background: #f8fafc;
        border: 1px solid #d1d5db;
        border-radius: 4px;
        text-decoration: none;
        color: #374151;
        font-size: 14px;
        font-weight: 400;
        cursor: pointer;
        transition: background-color 0.2s;
    }

    .btn:hover {
        background: #f1f5f9;
        text-decoration: none;
        color: #374151;
    }

    .btn:last-child {
        margin-right: 0;
    }

   
</style>
