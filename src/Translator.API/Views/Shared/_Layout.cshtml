@* Views/Shared/_Layout.cshtml *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Global Dictionary Admin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    
    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
        }
        .sidebar {
            min-height: 100vh;
            background-color: #343a40;
        }
        .sidebar .nav-link {
            color: #ccc;
        }
        .sidebar .nav-link:hover,
        .sidebar .nav-link.active {
            background-color: #495057;
            color: #fff;
        }
    </style>
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <nav class="sidebar p-3" style="width: 240px;">
            <h4 class="text-white mb-4">ðŸ“˜ Dictionary Admin</h4>
            <ul class="nav flex-column">
                <li class="nav-item mb-2">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")" href="/" asp-controller="Home" asp-action="Index">
                        <i class="fas fa-home me-2"></i>Dashboard
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Template" ? "active" : "")" href="/template" asp-controller="Template" asp-action="Index">
                        <i class="fas fa-layer-group me-2"></i>Templates
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Value" ? "active" : "")" href="/values" asp-controller="Value" asp-action="Index">
                        <i class="fas fa-font me-2"></i>Values
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Translation" ? "active" : "")" href="/translations" asp-controller="Translation" asp-action="Index">
                        <i class="fas fa-language me-2"></i>Translations
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Language" ? "active" : "")" href="/languages" asp-controller="Language" asp-action="Index">
                        <i class="fas fa-globe me-2"></i>Languages
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Main content -->
        <div class="flex-grow-1 p-4">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
