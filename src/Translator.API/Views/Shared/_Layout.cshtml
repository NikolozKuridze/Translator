@* Views/Shared/_Layout.cshtml *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <title>@ViewData["Title"] - Global Dictionary Admin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet"/>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet"/>

    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            margin: 0;
            padding: 0;
            height: 100vh;
            overflow: hidden; /* Prevent body scroll */
        }

        .main-container {
            display: flex;
            height: 100vh;
            width: 100%;
        }

        .sidebar {
            width: 240px;
            background-color: #343a40;
            display: flex;
            flex-direction: column;
            position: fixed;
            left: 0;
            top: 0;
            height: 100vh;
            z-index: 1000;
            overflow: hidden; /* Prevent sidebar scroll */
        }

        .sidebar .nav-link {
            color: #ccc;
        }

        .sidebar .nav-link:hover,
        .sidebar .nav-link.active {
            background-color: #495057;
            color: #fff;
        }

        .sidebar-content {
            flex: 1;
            padding: 1rem;
            overflow-y: auto; /* Allow internal sidebar scroll if needed */
            overflow-x: hidden;
        }

        .sidebar-footer {
            margin-top: auto;
            padding: 1rem;
            display: flex;
            justify-content: center;
            flex-shrink: 0;
        }

        .logout-btn {
            max-width: 150px;
            background-color: #dc3545;
            border-color: #dc3545;
            color: white;
        }

        .logout-btn:hover {
            background-color: #c82333;
            border-color: #bd2130;
            color: white;
        }

        .main-content {
            margin-left: 240px; /* Same as sidebar width */
            height: 100vh;
            overflow-y: auto; /* Allow main content to scroll */
            overflow-x: hidden;
            flex: 1;
            padding: 1.5rem;
            background-color: #f8f9fa;
        }

        /* Ensure content area scrollbar styling */
        .main-content::-webkit-scrollbar {
            width: 8px;
        }

        .main-content::-webkit-scrollbar-track {
            background: #f1f1f1;
        }

        .main-content::-webkit-scrollbar-thumb {
            background: #c1c1c1;
            border-radius: 4px;
        }

        .main-content::-webkit-scrollbar-thumb:hover {
            background: #a1a1a1;
        }
        
    </style>
</head>
<body>

<div class="main-container">
    <!-- Sidebar -->
    <nav class="sidebar">
        <div class="sidebar-content">
            <h4 class="text-white mb-4">Global Dictionary</h4>
            <ul class="nav flex-column">
                <li class="nav-item mb-2">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "User" ? "active" : "")"
                       href="/users" asp-controller="User" asp-action="Index">
                        <i class="fas fa-users me-2"></i>Users
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")"
                       href="/" asp-controller="Home" asp-action="Index">
                        <i class="fas fa-home me-2"></i>Dashboard
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Templates" ? "active" : "")"
                       href="/templates" asp-controller="Templates" asp-action="Index">
                        <i class="fas fa-layer-group me-2"></i>Templates
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Values" ? "active" : "")"
                       href="/values" asp-controller="Values" asp-action="Index">
                        <i class="fas fa-font me-2"></i>Values
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Languages" ? "active" : "")"
                       href="/languages" asp-controller="Languages" asp-action="Index">
                        <i class="fas fa-globe me-2"></i>Languages
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Logs" ? "active" : "")"
                       href="/logs" asp-controller="Logs" asp-action="Index">
                        <i class="fas fa-file-alt me-2"></i>System Logs
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Migrations" ? "active" : "")"
                       href="/migrations" asp-controller="Migrations" asp-action="Index">
                        <i class="fas fa-database me-2"></i>Migrations
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Cache" ? "active" : "")"
                       href="/cache" asp-controller="Cache" asp-action="Index">
                        <i class="fas fa-database me-2"></i>Cache Management
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Categories" ? "active" : "")"
                       href="/categories" asp-controller="categories" asp-action="Index">
                        <i class="fas fa-layer-group me-2"></i>Categories
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link"
                       target="_blank"
                       href="/docs">
                        <i class="fas fa-book me-2"></i>Documentation
                    </a>
                </li>
            </ul>
        </div>

        <div class="sidebar-footer">
            <button type="button" class="btn btn-sm logout-btn w-100" onclick="performLogout()">
                <i class="fas fa-sign-out-alt me-1"></i>Logout
            </button>
        </div>
    </nav>

    <!-- Main content -->
    <div class="main-content">
        <main role="main">
            @RenderBody()
        </main>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

<script>
    async function performLogout() {
        if (confirm('Are you sure you want to logout?')) {
            try {
                const response = await fetch('/Auth/Logout', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                    }
                });

                if (response.ok) {
                    window.location.href = '/Auth/Login';
                } else {
                    alert('Logout failed');
                }
            } catch (error) {
                console.error('Logout error:', error);
                window.location.href = '/Auth/Logout';
            }
        }
    }
</script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
