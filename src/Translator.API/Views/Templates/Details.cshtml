    removeValueFromUI(valueName) {
        // Find and remove the row
        const tbody = document.getElementById('valuesTableBody');
        const rows = tbody.querySelectorAll('tr');
        let rowToRemove = null;

        rows.forEach(row => {
            const codeElement = row.querySelector('code');
            if (codeElement && codeElement.textContent.trim() === valueName) {
                rowToRemove = row;
            }
        });

        if (rowToRemove) {
            rowToRemove.remove();

            // Update counts
            this.totalCount = Math.max(0, this.totalCount - 1);

            // Update UI elements
            document.getElementById('totalCountInfo').textContent = `${this.totalCount} values total`;

            const remainingRows = tbody.querySelectorAll('tr:not(#tableLoader):not(#emptyState)');
            document.getElementById('elementsCount').textContent = `${remainingRows.length} of ${this.totalCount} Elements`;

            // Check if we need to show empty state
            if (remainingRows.length === 0) {
                this.renderEmptyState();
            }

            // Update pagination if needed
            if (remainingRows.length === 0 && this.currentPage > 1) {
                this.currentPage = Math.max(1, this.currentPage - 1);
                this.loadTemplateDetails();
            }
        }
    }

