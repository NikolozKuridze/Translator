    async searchValues(searchTerm = '') {
        try {
            // Get the template owner information
            const allTemplates = await this.getAllTemplates();
            const currentTemplate = allTemplates.find(t => t.templateId === this.templateId);
            
            if (!currentTemplate) {
                this.showError('Could not find template information');
                return [];
            }

            // Use your existing endpoint
            const response = await fetch(`/Templates/GetUserValues?userName=${encodeURIComponent(currentTemplate.ownerName || '')}&search=${encodeURIComponent(searchTerm)}&limit=50`, {
                method: 'GET',
                headers: {
                    'X-Requested-With': 'XMLHttpRequest'
                }
            });

            if (!response.ok) {
                throw new Error(`HTTP ${response.status}`);
            }

            const result = await response.json();
            
            if (result.success) {
                return result.values || [];
            } else {
                this.showError(result.message);
                return [];
            }
        } catch (error) {
            console.error('Error searching values:', error);
            this.showError('Failed to search values');
            return [];
        }
    }

