    async performSearch() {
        const searchTerm = document.getElementById('valueSearchInput').value.trim();
        const resultsContainer = document.getElementById('searchResultsContainer');
        const noResultsMessage = document.getElementById('noResultsMessage');
        const searchResults = document.getElementById('searchResults');
        
        if (searchTerm.length === 0) {
            resultsContainer.style.display = 'none';
            return;
        }

        // Show loading state
        searchResults.innerHTML = '<div class="text-center py-3"><div class="spinner-border spinner-border-sm" role="status"></div> Searching...</div>';
        resultsContainer.style.display = 'block';
        noResultsMessage.style.display = 'none';

        // Use debouncing
        clearTimeout(window.debounceTimer);
        window.debounceTimer = setTimeout(async () => {
            const values = await this.searchValues(searchTerm);
            
            if (values.length === 0) {
                searchResults.innerHTML = '';
                noResultsMessage.style.display = 'block';
                document.getElementById('resultsCount').textContent = '0 results';
            } else {
                this.renderSearchResults(values);
                noResultsMessage.style.display = 'none';
                document.getElementById('resultsCount').textContent = `${values.length} result${values.length !== 1 ? 's' : ''}`;
            }
        }, 300);
    }

    renderSearchResults(values) {
        const searchResults = document.getElementById('searchResults');
        searchResults.innerHTML = '';
        
        values.forEach(value => {
            const item = document.createElement('a');
            item.href = '#';
            item.className = 'list-group-item list-group-item-action value-search-item';
            item.dataset.valueName = value.key;
            
            // Check if value is already in template
            const isInTemplate = this.currentValues?.some(v => v.key === value.key);
            
            item.innerHTML = `
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <div class="d-flex align-items-center gap-2 mb-1">
                            <strong>${this.escapeHtml(value.key)}</strong>
                            ${value.ownershipType === 'Global' ? 
                                '<span class="badge bg-primary value-tag">Global</span>' : 
                                `<span class="badge bg-success value-tag">User: ${this.escapeHtml(value.ownerName || '')}</span>`
                            }
                            ${isInTemplate ? '<span class="badge bg-warning value-tag">Already in template</span>' : ''}
                        </div>
                        <div class="text-muted">
                            <small>
                                <i class="fas fa-flag"></i> ${value.translationsCount || 0} translation${value.translationsCount !== 1 ? 's' : ''}
                            </small>
                        </div>
                    </div>
                    ${!isInTemplate ? '<i class="fas fa-plus text-success"></i>' : '<i class="fas fa-check text-muted"></i>'}
                </div>
            `;
            
            if (!isInTemplate) {
                item.addEventListener('click', (e) => {
                    e.preventDefault();
                    this.selectValue(value);
                });
            } else {
                item.classList.add('disabled');
                item.style.opacity = '0.6';
                item.style.cursor = 'not-allowed';
            }
            
            searchResults.appendChild(item);
        });
    }

    selectValue(value) {
        window.selectedValue = value;
        
        // Update UI
        const allItems = document.querySelectorAll('.value-search-item');
        allItems.forEach(item => {
            item.classList.remove('selected');
        });
        
        const selectedItem = document.querySelector(`[data-value-name="${value.key}"]`);
        if (selectedItem) {
            selectedItem.classList.add('selected');
        }
        
        // Show selected value details
        const selectedContainer = document.getElementById('selectedValueContainer');
        const selectedDetails = document.getElementById('selectedValueDetails');
        
        selectedDetails.innerHTML = `
            <div class="row">
                <div class="col-md-6">
                    <h6>${this.escapeHtml(value.key)}</h6>
                    <div class="mb-2">
                        ${value.ownershipType === 'Global' ? 
                            '<span class="badge bg-primary">Global Value</span>' : 
                            `<span class="badge bg-success">User Value: ${this.escapeHtml(value.ownerName || '')}</span>`
                        }
                    </div>
                    <div>
                        <small class="text-muted">
                            <i class="fas fa-flag"></i> ${value.translationsCount || 0} translations
