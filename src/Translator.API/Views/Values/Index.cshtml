class UserDropdownManager {
    constructor() {
        this.searchInput = document.getElementById('userSearchInput');
        this.dropdown = document.getElementById('userDropdown');
        this.optionsContainer = document.getElementById('userOptionsContainer');
        this.loadingElement = document.getElementById('dropdownLoading');
        this.noUsersElement = document.getElementById('dropdownNoUsers');
        this.selectedUsernameInput = document.getElementById('selectedUsername');
        this.selectedUser = null;
        this.users = [];
        this.debounceTimeout = null;

        this.init();
    }

    init() {
        this.bindEvents();
        this.loadUsers();
    }

    bindEvents() {
        // Focus events
        this.searchInput.addEventListener('focus', () => {
            this.showDropdown();
        });

        // Input events for filtering
        this.searchInput.addEventListener('input', (e) => {
            this.handleSearchInput(e.target.value);
        });

        // Click events
        this.searchInput.addEventListener('click', () => {
            this.showDropdown();
        });

        // Click outside to close dropdown
        document.addEventListener('click', (e) => {
            if (!this.searchInput.contains(e.target) && !this.dropdown.contains(e.target)) {
                this.hideDropdown();
            }
        });

        // Escape key to close dropdown
        this.searchInput.addEventListener('keydown', (e) => {
            if (e.key === 'Escape') {
                this.hideDropdown();
            }
        });

        // Arrow keys navigation
        this.searchInput.addEventListener('keydown', (e) => {
            if (e.key === 'ArrowDown' || e.key === 'ArrowUp') {
                e.preventDefault();
                this.handleArrowKeys(e.key);
            }
        });
    }

    handleSearchInput(searchTerm) {
        clearTimeout(this.debounceTimeout);

        this.debounceTimeout = setTimeout(() => {
            if (searchTerm.length >= 1) {
                this.loadUsers(searchTerm);
            } else if (searchTerm.length === 0) {
                this.loadUsers();
            }
        }, 300);
    }

    async loadUsers(search = '') {
        this.showLoading();

        try {
            const params = new URLSearchParams();
            if (search) {
                params.append('search', search);
            }

            const response = await fetch(`/Values/GetUsers?${params}`, {
                method: 'GET',
                headers: {
                    'Content-Type': 'application/json'
                }
            });

            if (!response.ok) {
                throw new Error(`HTTP ${response.status}: ${response.statusText}`);
            }

            const result = await response.json();

            if (result.success) {
                this.users = result.users || [];
                this.renderUserOptions();
            } else {
                this.showError('Failed to load users');
            }
        } catch (error) {
            console.error('Error loading users:', error);
            this.showError('Failed to load users');
        } finally {
            this.hideLoading();
        }
    }

    renderUserOptions() {
        this.optionsContainer.innerHTML = '';

        if (this.users.length === 0) {
            this.noUsersElement.classList.remove('d-none');
            return;
        }

        this.noUsersElement.classList.add('d-none');

        this.users.forEach((user, index) => {
            const option = this.createUserOption(user, index);
            this.optionsContainer.appendChild(option);
        });
    }

    createUserOption(user, index) {
        const div = document.createElement('div');
        div.className = 'dropdown-item user-option';
        div.style.cursor = 'pointer';
        div.dataset.username = user.userName;
        div.dataset.userId = user.userId;
        div.dataset.index = index;
        div.tabIndex = 0;

        div.innerHTML = `
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <strong>${this.escapeHtml(user.userName)}</strong>
                    <div class="text-muted small">
                        <small>ID: ${user.userId.substring(0, 8)}...</small>
                    </div>
                </div>
                ${this.selectedUser && this.selectedUser.userName === user.userName
            ? '<i class="fas fa-check text-success"></i>'
            : ''}
            </div>
        `;

        div.addEventListener('click', () => {
            this.selectUser(user);
        });

        div.addEventListener('mouseenter', () => {
            this.highlightOption(div);
        });

        div.addEventListener('keydown', (e) => {
            if (e.key === 'Enter' || e.key === ' ') {
                e.preventDefault();
                this.selectUser(user);
            }
        });

        return div;
    }

    selectUser(user) {
        this.selectedUser = user;
        this.searchInput.value = user.userName;
        this.selectedUsernameInput.value = user.userName;
        this.hideDropdown();

        // Update UI to show selection
        this.updateSelectionUI();
    }

    clearSelection() {
        this.selectedUser = null;
        this.searchInput.value = '';
        this.selectedUsernameInput.value = '';
        this.updateSelectionUI();
    }

    updateSelectionUI() {
        const userOptions = document.querySelectorAll('.user-option');
        userOptions.forEach(option => {
            const username = option.dataset.username;
            const checkIcon = option.querySelector('.fa-check');

            if (checkIcon) {
                checkIcon.remove();
            }

            if (this.selectedUser && this.selectedUser.userName === username) {
                const newCheckIcon = document.createElement('i');
                newCheckIcon.className = 'fas fa-check text-success';
                option.querySelector('.d-flex').appendChild(newCheckIcon);
            }
        });
    }

    showDropdown() {
        if (!this.dropdown.classList.contains('show')) {
            this.dropdown.style.display = 'block';
            this.dropdown.classList.add('show');

            // Position dropdown below input using Bootstrap's dropdown positioning
            this.positionDropdown();
        }
    }

    positionDropdown() {
        const inputRect = this.searchInput.getBoundingClientRect();
        const parentRect = this.searchInput.offsetParent.getBoundingClientRect();

        // Calculate position relative to parent container
        const top = inputRect.bottom - parentRect.top;
        const left = inputRect.left - parentRect.left;

        this.dropdown.style.position = 'absolute';
        this.dropdown.style.top = `${top}px`;
        this.dropdown.style.left = `${left}px`;
        this.dropdown.style.width = `${inputRect.width}px`;
        this.dropdown.style.zIndex = '1060'; // Higher than Bootstrap modals
        this.dropdown.style.maxHeight = '200px';
        this.dropdown.style.overflowY = 'auto';
    }

    hideDropdown() {
        this.dropdown.style.display = 'none';
        this.dropdown.classList.remove('show');

        // If search input is empty but we have a selected user, restore the username
        if (this.selectedUser && !this.searchInput.value.trim()) {
            this.searchInput.value = this.selectedUser.userName;
        }
    }

    handleArrowKeys(key) {
        const options = Array.from(document.querySelectorAll('.user-option'));
        if (options.length === 0) return;

        const currentFocused = document.activeElement;
        let currentIndex = -1;

        if (currentFocused.classList.contains('user-option')) {
            currentIndex = parseInt(currentFocused.dataset.index);
        }

        let nextIndex;
        if (key === 'ArrowDown') {
            nextIndex = currentIndex < options.length - 1 ? currentIndex + 1 : 0;
        } else {
            nextIndex = currentIndex > 0 ? currentIndex - 1 : options.length - 1;
        }

        if (nextIndex >= 0 && nextIndex < options.length) {
            options[nextIndex].focus();
        } else if (options.length > 0) {
            options[0].focus();
        }
    }

    highlightOption(option) {
        document.querySelectorAll('.user-option').forEach(opt => {
            opt.classList.remove('active');
        });
        option.classList.add('active');
    }

    showLoading() {
        this.loadingElement.classList.remove('d-none');
        this.optionsContainer.style.display = 'none';
        this.noUsersElement.classList.add('d-none');
    }

    hideLoading() {
        this.loadingElement.classList.add('d-none');
        this.optionsContainer.style.display = 'block';
    }

    showError(message) {
        const errorDiv = document.createElement('div');
        errorDiv.className = 'dropdown-item text-danger';
        errorDiv.textContent = message;
        this.optionsContainer.innerHTML = '';
        this.optionsContainer.appendChild(errorDiv);
        this.noUsersElement.classList.add('d-none');
    }

    escapeHtml(text) {
        const div = document.createElement('div');
        div.textContent = text;
        return div.innerHTML;
    }
}
